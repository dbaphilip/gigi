<div class="row brico fs-4">
  <div class="col-7">
    <h1 class="fw-bold mb-4"> <%= @product.title %> </h1>
    <div class="product-image-container text-center">
      <% if @product.image.attached? %>
        <%= image_tag @product.image %>
      <% else %>
        <%= image_tag "mercedez.webp" %>
      <% end %>
    </div>
  </div>
  <%#  %>
  <%# Aside %>
  <div class="col-5">
    <aside class="mt-5 shadow-secondary">
      <table class="skew table">
        <thead class="text-center">
          <tr>
            <th scope="col" colspan="2" class="text-muted"> <%= @product.title %> </th>
          </tr>
        </thead>
        <tbody class="text-center">
          <tr>
            <td colspan="2" class="fs-3 p-5"> Are you sure you want to delete this product?</td>
          </tr>
          <tr>
            <td>
              <%= link_to "Cancel", request.referrer, class: "shadow-tetiary btn btn-primary btn-lg" %>
            </td>
            <td>
              <%= link_to "Delete", @product, data: {turbo_method: :delete}, class: "shadow-tetiary btn btn-danger btn-lg" %>
            </td>
          </tr>
        </tbody>
      </table>
    </aside>
  </div>
</div>